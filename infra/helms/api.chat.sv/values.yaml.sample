deployment:
  name: lmc-api-chat-depl
  image:
    repo: 13angs/lmc.api.chat.sv
    tag: latest
  env:
    rabbitMQConfig:
      properties:
        prefetchCount: 100
    aspnetCoreEnv: 'Production'

service:
  name: lmc-api-chat-sv
  ports:
    default: 5000
    grpc: 7000
  type: ClusterIP

ingress:
  rules:
    - host: 'line-message-consumer.org'
    - host: 'dev.lmc.nextblackswan.com'
    - host: 'lmc.nextblackswan.com'

secret:
  name: lmc-api-chat-secret
  data:
    rabbitmqHost:
      - 'amqp://root:password@rabbitmq-sv.default:5672'
      - 'amqp://root:password@rabbitmq-sv.lmc-dev:5672'
      - 'amqp://root:password@rabbitmq-sv.lmc-prod:5672'
    mongoHost:
      - 'mongodb://root:password@mongo-sv.default:27017'
      - 'mongodb://root:password@mongo-sv.lmc-dev:27017'
      - 'mongodb://root:password@mongo-sv.lmc-prod:27017'